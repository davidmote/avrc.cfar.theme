<?xml version="1.0" encoding="UTF-8"?>
<rules
    xmlns="http://namespaces.plone.org/diazo"
    xmlns:css="http://namespaces.plone.org/diazo/css"
    xmlns:xsl="http://www.w3.org/1999/XSL/Transform">

    <xsl:variable name="wrapped" css:select="#visual-portal-wrapper"/>
    <xsl:variable name="leftcolumns" css:select="#portal-column-one"/>
    <xsl:variable name="rightcolumns" css:select="#portal-column-two"/>

    <!-- The default theme, used for standard Plone web pages -->
    <theme href="./home.html" if-path="/ news/" />

    <theme href="./default.html" if-content="$wrapped" />
    <notheme if="$ajax_load" />
    <notheme if-content="not($wrapped)" />

    <replace css:theme="base" css:content="base" />
    <!-- Rules applying to a standard Plone web page -->
    <rules if-content="$wrapped">
        <replace css:theme="title" css:content="title" />
        <!-- Add meta tags -->
        <drop theme="/html/head/meta" />
        <after content="/html/head/meta" theme-children="/html/head" />

        <!-- Copy style, script and link tags in the order they appear in the content -->
        <after
            content-children="/html/head"
            theme-children="/html/head"
            />

        <drop theme="/html/head/style" />
        <drop theme="/html/head/script" />
        <drop theme="/html/head/link" />

        <!-- Copy over the id/class attributes on the body tag.
             This is important for per-section styling -->
        <merge attributes="class" css:content="body" css:theme="body" />
        <copy attributes="id dir" css:content="body" css:theme="body" />

        <copy attributes="href title accesskey" css:content="a#portal-logo" css:theme="a#logo-link" />

        <replace css:content="#portal-personaltools" css:theme-children=".nav-global ul li" />

        <replace css:content="#portal-globalnav" css:theme-children="#nav-main" />

        <replace css:content="#portal-column-content" css:theme-children="#content-area"  />

        <drop css:content="#portal-breadcrumbs" />
        <drop css:content=".documentAuthor" />

        <replace css:content-children="#portal-column-one"   css:theme-children="#contentbox-leftbar" />
        <drop css:theme="#contentbox-leftbar" if-content="not($leftcolumns)" />
        <drop css:theme="#contentbox-rightbar" if-content="not($rightcolumns)" />
        <strip css:theme=".contentbox-partial" if-content="not($rightcolumns)" />
        <replace css:content="#portal-siteactions"   css:theme="#footer-actions" />

        <after css:content="#visual-portal-wrapper script" css:theme-children="body" />
    </rules>
</rules>
    
